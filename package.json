{
  "name": "deltoro-nft-contract",
  "version": "1.0.0",
  "description": "Smart contracts for Octavio del Toro's NFT collection",
  "scripts": {
    "build": "hardhat clean && hardhat compile",
    "clean": "hardhat clean",
    "test": "hardhat compile && hardhat test",
    "slowTest": "env MOCHA_SLOW_TEST=true npm test",
    "format": "prettier -w test/ src/ contracts/",
    "deploy-testnet": "npm run build && hardhat run --network testnet src/deploy.ts",
    "deploy-mainnet": "npm run build && hardhat run --network mainnet src/deploy.ts"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/DracoBlocks/deltoro-nft.git"
  },
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/DracoBlocks/deltoro-nft/issues"
  },
  "homepage": "https://github.com/DracoBlocks/deltoro-nft#readme",
  "devDependencies": {
    "@chainlink/contracts": "^0.2.2",
    "@chainlink/token": "^1.1.0",
    "@nomiclabs/hardhat-ethers": "^2.0.3",
    "@nomiclabs/hardhat-etherscan": "^2.1.8",
    "@nomiclabs/hardhat-waffle": "^2.0.1",
    "@openzeppelin/contracts": "^4.3.3",
    "@typechain/ethers-v5": "^7.2.0",
    "@typechain/hardhat": "^2.3.1",
    "@types/mocha": "^8.2.3",
    "@types/node": "^15.14.9",
    "@uniswap/v2-core": "^1.0.1",
    "@uniswap/v2-periphery": "^1.1.0-beta.0",
    "chai": "^4.3.4",
    "ethereum-waffle": "^3.4.0",
    "ethereumjs-util": "^7.1.3",
    "ethers": "^5.5.1",
    "hardhat": "^2.7.0",
    "hardhat-gas-reporter": "^1.0.4",
    "json-d-ts": "^1.0.1",
    "prettier": "^2.4.1",
    "prettier-plugin-solidity": "^1.0.0-beta.19",
    "ts-generator": "^0.1.1",
    "ts-node": "^10.4.0",
    "typechain": "^5.2.0",
    "typescript": "^4.5.2"
  }
}
